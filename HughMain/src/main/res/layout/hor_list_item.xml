<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/peoplerow_plxc"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/plxcck_ch"
        style="@style/plxf_item_txt"
        android:layout_width="110px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="床号" />

    <TextView
        android:id="@+id/plxcck_xm"
        style="@style/plxf_item_txt"
        android:layout_width="165px"
        android:layout_height="wrap_content"
        android:text="姓名" />

    <LinearLayout android:id="@+id/item_scroll_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/plxcck_sj"
            style="@style/plxf_item_txt"
            android:layout_width="165px"
            android:layout_height="wrap_content"
            android:text="时间" />

        <TextView
            android:id="@+id/plxcck_zx"
            style="@style/plxf_item_txt"
            android:layout_width="165px"
            android:layout_height="wrap_content"
            android:text="执行信息" />

        <TextView
            android:id="@+id/plxcck_zxr"
            style="@style/plxf_item_txt"
            android:layout_width="165px"
            android:layout_height="wrap_content"
            android:text="执行人" />

        <TextView
            android:id="@+id/plxcck_zt"
            style="@style/plxf_item_txt"
            android:layout_width="110px"
            android:layout_height="wrap_content"
            android:text="状态" />
    </LinearLayout>

</LinearLayout>